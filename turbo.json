{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "inputs": ["frontend/src/**"],
      "outputs": ["frontend/dist/**"],
      "dependsOn": ["lint", "test"],
      "env": ["VITE_APP_SERVER_URL"]
    },
    "lint": {},
    "pretty": {},
    "pretty-fix": {
      "cache": false,
      "persistent": false
    },
    "test": {}
  }
}
